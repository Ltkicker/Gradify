<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintBounds">

        <include
            android:id="@+id/activity0_main_loading_withlogo"
            layout="@layout/activity0_main_loading_withlogo" />

        <include
            android:id="@+id/activity1_main_loading"
            layout="@layout/activity1_main_loading" />

        <include
            android:id="@+id/activity2_main_loading_withlogo"
            layout="@layout/activity2_main_loading_withlogo" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>