<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="wrap_content" >
	<ScrollView android:id="@+id/classroom"
		android:layout_width="wrap_content"
		android:layout_height="match_parent" >

		<RelativeLayout android:id="@+id/content_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >

			<View   android:id="@+id/_bg__classroom"
				android:background="@drawable/shape_rectangle"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:layout_width="360dp"
				android:layout_height="800dp" />


			<RelativeLayout android:id="@+id/background"
				android:layout_marginTop="0dp"
				android:layout_marginStart="-12dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

				<View   android:id="@+id/background_overlay"
					android:background="@drawable/img_background1"
					android:layout_marginStart="12dp"
					android:layout_marginTop="90dp"
					android:layout_width="364dp"
					android:layout_height="723dp" />

				<ImageView android:id="@+id/background_vector"
					android:src="@drawable/img_background1"
					android:contentDescription="@string/background_desc"
					android:layout_marginStart="-151dp"
					android:layout_marginTop="282dp"
					android:layout_width="686dp"
					android:layout_height="352dp" />

			</RelativeLayout>


			<RelativeLayout android:id="@+id/popup"
				android:layout_marginTop="267dp"
				android:layout_marginStart="23dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

				<View   android:id="@+id/container"
					android:background="@drawable/shape_popupbox"
					android:layout_marginStart="0dp"
					android:layout_marginTop="0dp"
