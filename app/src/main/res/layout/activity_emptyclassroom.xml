					android:layout_width="58dp"
					android:layout_height="102.5dp"
					android:text="@string/cubix_text_3"
					/>


				<RelativeLayout android:id="@+id/create_class"
					android:layout_marginTop="165dp"
					android:layout_marginStart="38dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					>

					<View   android:id="@+id/shape"
						android:background="@drawable/shape_rectangle2"
						android:layout_marginStart="15dp"
						android:layout_marginTop="0dp"
						android:layout_width="204dp"
						android:layout_height="52dp" />

					<TextView android:id="@+id/text"
						android:layout_gravity="center_horizontal|center"
						android:gravity="center"
						android:textSize="20sp"
						android:textColor="@color/white"
						android:layout_marginStart="-3dp"
						android:layout_marginTop="3dp"
						android:layout_width="257dp"
						android:layout_height="181dp"
						android:text="@string/create_class"
						/>

				</RelativeLayout>

			</RelativeLayout>


			<RelativeLayout android:id="@+id/tags"
				android:layout_marginTop="163dp"
				android:layout_marginStart="23dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>


				<RelativeLayout android:id="@+id/btnarchive"
					android:layout_marginTop="0dp"
					android:layout_marginStart="195dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					>

					<View   android:id="@+id/shapetags3"
						android:background="@drawable/shape_rectangle"
						android:layout_marginStart="0dp"
