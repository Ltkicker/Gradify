<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_mainfloatingbox"
        tools:ignore="ContentDescription,ImageContrastCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/img_teachermainfloatingbox" />

    <TextView
        android:id="@+id/text_delete"
        tools:ignore="MissingConstraints,TextContrastCheck,TextSizeCheck"
        android:layout_width="71dp"
        android:layout_height="20dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins"
        android:text="@string/main_floatdelete"
        android:textAlignment="center"
        android:textColor="#80596F6B"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_mainfloatingbox"
        app:layout_constraintEnd_toStartOf="@+id/img_editicon2"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="@+id/img_mainfloatingbox" />

    <TextView
        android:id="@+id/text_edit"
        tools:ignore="KeyboardInaccessibleWidget,MissingConstraints,TextContrastCheck,TextSizeCheck,TouchTargetSizeCheck"
        android:layout_width="49dp"
        android:layout_height="24dp"
        android:clickable="true"
        android:fontFamily="@font/poppins"
        android:text="@string/main_floatedit"
        android:textAlignment="center"
        android:textColor="#80596F6B"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/text_delete"
        app:layout_constraintEnd_toStartOf="@+id/img_editicon"
        app:layout_constraintStart_toStartOf="@+id/img_mainfloatingbox"
        app:layout_constraintTop_toTopOf="@+id/img_mainfloatingbox" />

    <ImageButton
        android:id="@+id/img_editicon"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:background="@android:drawable/ic_menu_edit"
        android:backgroundTint="#285129"
        app:layout_constraintBottom_toTopOf="@+id/img_editicon2"
        app:layout_constraintEnd_toEndOf="@+id/img_mainfloatingbox"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/img_mainfloatingbox" />

    <ImageButton
        android:id="@+id/img_editicon2"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/ic_menu_delete"
        android:backgroundTint="#285129"
        app:layout_constraintBottom_toBottomOf="@+id/img_mainfloatingbox"
        app:layout_constraintEnd_toEndOf="@+id/img_mainfloatingbox" />
</androidx.constraintlayout.widget.ConstraintLayout>